<% include('layout', { title: 'Edit Post', body: 
  <section>
    <h2>Edit Post</h2>
    <form method="POST" action="/api/posts/<%= post._id %>?_method=PUT">
      <input type="text" name="title" value="<%= post.title %>" required>
      <input type="text" name="platform" value="<%= post.platform || '' %>" required>
      <input type="text" name="contentType" value="<%= post.contentType || '' %>" required>
      <textarea name="content"><%= post.content %></textarea>
      <button type="submit">Update Profile</button>
    </form>
  <% } %>
  </section>
);
